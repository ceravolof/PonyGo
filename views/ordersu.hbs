<!DOCTYPE html>
<html lang="it">

<head>
  <meta charset="UTF-8">
  <title>I tuoi ordini da consegnare</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="../img/icon-pizza.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
        PonyGo
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar"
        aria-controls="offcanvasNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasNavbar"
        aria-labelledby="offcanvasNavbarLabel">
        <div class="offcanvas-header">
          <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
            aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/user/orders">Ordini da consegnare</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/delivered-orders">Miei ordini consegnati</a>
            </li>

          </ul>
          <button class="btn btn-danger w-100" onclick="window.location.href='/logout'">Logout</button>
        </div>
      </div>
    </div>
  </nav>

  <div class="container text-center mt-5 pt-5">
    <h2 class="mb-4">Ciao <span id="username">{{name}}</span>, ecco i tuoi ordini!</h2>
  </div>

  <div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {{#if orders.length}}
      {{#each orders}}
      <div class="col" id="order-card-{{id}}">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{customer}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Ordine #{{id}}</h6>
            <ul class="list-group list-group-flush mb-3">
              <li class="list-group-item"><strong>Pizza:</strong> {{pizza}}</li>
              <li class="list-group-item"><strong>Indirizzo:</strong> {{address}}</li>
              <li class="list-group-item"><strong>Quantità:</strong> {{quantity}}</li>
              <li class="list-group-item"><strong>Note:</strong> {{notes}}</li>
              <li class="list-group-item"><strong>Stato:</strong> <span id="order-status-{{id}}">{{status}}</span></li>
            </ul>

            <!-- Bottone centrato e più grande, solo per ordini pronti -->
            {{#if (eq status "pronto")}}
            <div class="text-center mt-3">
              <button class="btn btn-success btn-lg" onclick="markConsegnato({{id}})">Consegnato</button>
            </div>
            {{/if}}
          </div>
          <div class="card-footer text-body-secondary">
            {{createdAt}}
          </div>
        </div>
      </div>
      {{/each}}
      {{else}}
      <div class="col-12">
        <div class="alert alert-info mt-4" role="alert">
          Nessun ordine disponibile al momento.
        </div>
      </div>
      {{/if}}
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Funzione che chiama la rotta PATCH per marcare come consegnato
    async function markConsegnato(orderId) {
      if (confirm('Confermi che questo ordine è stato consegnato?')) {
        const res = await fetch('/user/orders/' + orderId + '/consegnato', {
          method: 'PATCH',
          headers: { 'Content-Type': 'application/json' },
        });
        if (res.ok) {
          // Nasconde la card dopo aver consegnato l'ordine
          document.getElementById('order-card-' + orderId).remove();

          // Se non ci sono più ordini, mostra il messaggio "nessun ordine"
          if (document.querySelectorAll('.col').length === 0) {
            const ordersContainer = document.querySelector('.row.row-cols-1');
            ordersContainer.innerHTML = `
                <div class="col-12">
                  <div class="alert alert-info mt-4" role="alert">
                    Nessun ordine disponibile al momento.
                  </div>
                </div>
              `;
          }
        } else {
          alert('Errore nel marcare come consegnato.');
        }
      }
    }
  </script>
  <!-- WebSocket connection -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Connessione base per tracciare l'utente
        const socket = io();
    </script>
</body>

</html>